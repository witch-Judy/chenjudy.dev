---
import { en } from "@/i18n/en";
import { zh } from "@/i18n/zh";
import Socials from "./Socials.astro";
---

<section id="contact" class="pt-12 pb-8">
  <h2
    class="text-2xl font-semibold tracking-wide"
    data-lang-en={en.contactTitle}
    data-lang-zh={zh.contactTitle}
  >
    {en.contactTitle}
  </h2>
  <p
    class="mt-3 text-lg text-foreground/70"
    data-lang-en={en.contactSubtitle}
    data-lang-zh={zh.contactSubtitle}
  >
    {en.contactSubtitle}
  </p>
  <div class="mt-6">
    <Socials />
  </div>
</section>
